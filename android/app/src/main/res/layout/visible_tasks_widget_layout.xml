<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <TextView
        android:id="@+id/widget_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="InYourFace"
        android:textStyle="bold"
        android:textColor="@color/primary_purple"
        android:textSize="16sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/widget_title">

        <!-- Task 1 -->
        <LinearLayout
            android:id="@+id/task_1_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/task_1_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/task_indicator"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/widget_task_1_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task 1"
                android:textColor="@color/primary_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Task 2 -->
        <LinearLayout
            android:id="@+id/task_2_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <View
                android:id="@+id/task_2_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/task_indicator"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/widget_task_2_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task 2"
                android:textColor="@color/primary_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"/>
        </LinearLayout>

        <!-- Task 3 -->
        <LinearLayout
            android:id="@+id/task_3_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <View
                android:id="@+id/task_3_indicator"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:background="@drawable/task_indicator"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:id="@+id/widget_task_3_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Task 3"
                android:textColor="@color/primary_text"
                android:maxLines="1"
                android:ellipsize="end"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/widget_update_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:text="Last updated: "
        android:textColor="@color/secondary_text"
        android:textSize="10sp"/>
</RelativeLayout> 